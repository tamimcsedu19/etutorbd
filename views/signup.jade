extends layout

block content
    form(method='POST')
        legend Signup
        .form-group
            label(for='email') Email
            input.form-control(type='email', name='email', autofocus)
        .form-group
            label(for='firstName') FirstName
            input.form-control(type='text', name='firstName')
        .form-group
            label(for='lastName') LastName
            input.form-control(type='text', name='lastName')
        .form-group
            label(for='password') Password
            input.form-control(type='password', name='password')
        .form-group
            label(for='confirm') Confirm Password
            input.form-control(type='password', name='confirm')
        button.btn.btn-primary(type='submit') Signup